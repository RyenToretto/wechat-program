<!--pages/list/listTemplate/listTemplate.wxml-->
<template name="list_item">
  <view class="list_item_box">
    <view class="item_date">
      <image src='{{avatar}}'></image>
      <text>{{date}}</text>
    </view>

    <text class="item_title">{{title}}</text>

    <image class="item_img" src='{{detail_img}}'></image>

    <text class="item_content">{{detail_content}}</text>

    <view class="item_info">
      <image src='{{detail_love_image1}}'></image>
      <text>{{love_count}}</text>
      <image src='{{detail_love_image2}}'></image>
      <text>{{attention_count}}</text>
    </view>
  </view>
</template>