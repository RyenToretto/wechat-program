/* pages/list/detail/detail.wxss */
.detail_box {
  position: relative;
  display: flex;
  flex-direction: column;
}

.detail_img {
  width: 100%;
}

.musicImg {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}

.detail_info {
  display: flex;
  align-items: center;

  font-size:14px;
  vertical-align:middle;
  margin: 6px 0 0 6px;
}

.detail_title {
  font-size:32rpx;
  font-weight:bold;
  margin:10rpx 0 10rpx 30rpx;
}

.detail_avatar {
  width: 60rpx;
  height: 60rpx;
}

.detail_action {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.middle_line:before {
  content: "";
  display: block;
  position: absolute;
  left: 5%;
  width: 90%;
  height: 2rpx;
  background-color: #eee;
  z-index: -1;
}

.detail_action image {
  width:90rpx;
  height:90rpx;
  margin-right:20rpx;
}

.detail_share {
  width: 236rpx;
  height: 92rpx;
  line-height: 92rpx;
  text-align: center;
  border-radius: 10rpx;
  color: rgba(0, 0, 0, 0.6);
  background-color: #dedede;

  position:relative;
  left: 50%;
  transform: translateX(-50%);
}

.detail_content {
  font-size:14px;
  line-height:28px;
  text-indent:14px;
}